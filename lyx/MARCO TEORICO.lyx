\end_layout

\begin_layout Standard
Asociativa:
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{equation}
\forall q_{j1},q_{j2},q_{j3}\in C^{4}\exists((q_{j1}+q_{j2})+q_{j3}=q_{j1}+(q_{j2}+q_{j3}))\in\mathbb{C}^{4}
\end{equation}

\end_inset


\end_layout

\begin_layout Standard
Elemento Neutro:
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{equation}
\begin{gathered}\forall q_{ji}\in\mathbb{C}^{4}\exists!q_{n}\backepsilon q_{ji}+q_{n}=q_{ji},ssi\\
q_{n}=\left[0\right]\in\mathbb{C}^{4}
\end{gathered}
\end{equation}

\end_inset


\end_layout

\begin_layout Standard
Inverso:
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{equation}
\forall q_{ji}\exists\overline{q}_{ji}\in\mathbb{C}^{4}\backepsilon q_{ji}+\overline{q}_{ji}=q_{n}\in\mathbb{C}^{4}
\end{equation}

\end_inset


\end_layout

\begin_layout Standard
Conmutatividad:
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{equation}
\forall q_{j1},q_{j2}\in\mathbb{C}^{4}\exists(q_{j1}+q_{j2}=q_{j2}+q_{j1})\in\mathbb{C}^{4}
\end{equation}

\end_inset


\end_layout

\begin_layout Itemize

\series bold
Producto
\begin_inset Formula $\ensuremath{\left(C^{4},\times\right)}$
\end_inset


\end_layout

\begin_layout Standard
Asociativa:
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{equation}
\forall q_{ji}\in\mathbb{C}^{4},i=\overline{1,3},\exists((q_{j1}\times q_{j2})\times q_{j3}=q_{j1}\times(q_{j2}\times q_{j3}))\in\mathbb{C}^{4}
\end{equation}

\end_inset


\end_layout

\begin_layout Standard
Elemento Neutro:
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{equation}
\begin{gathered}\forall q_{ji}\in\mathbb{C}^{4}\exists!q_{I}\backepsilon q_{ji}\times q_{I}=q_{ji},ssi\\
q_{I}=\left[1\right]\in\mathbb{C}^{4}
\end{gathered}
\end{equation}

\end_inset


\end_layout

\begin_layout Standard
Inverso:
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{equation}
\forall q_{ji}\exists q_{ji}^{*}\in\mathbb{C}^{4}\backepsilon q_{ji}\times q_{ji}^{*}=q_{I}\in\mathbb{C}^{4}
\end{equation}

\end_inset


\end_layout

\begin_layout Standard
No Conmutativo:
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{equation}
\forall q_{ji}\in\mathbb{C}^{4},i=1,2;\exists(q_{j1}\times q_{j2}\ne q_{j2}\times q_{j1})\in\mathbb{C}^{4}
\end{equation}

\end_inset


\end_layout

