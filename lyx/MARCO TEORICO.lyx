\begin_layout Standard
\begin_inset Formula 
\begin{equation}
q=a_{0}+a_{1}\bar{i}+a_{2}\overline{j}+a_{3}\overline{k}\exists q\in\mathbb{C}^{4},\{a_{i}:i\in Z{}_{+}\}\mathbb{\subseteq R},\overline{i},\overline{j},\overline{k}\in Im^{3}
\end{equation}

\end_inset


