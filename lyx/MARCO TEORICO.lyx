\end{equation}

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{equation}
\forall q_{j}\exists!q_{j}^{-}\backepsilon q_{j}+q_{j}^{-}=0,(q_{j},q_{j}^{-})=a_{0}^{2}-a_{1}^{2}-a_{2}^{2}-a_{3}^{2}\in\mathbb{R},
\end{equation}

\end_inset


\end_layout

\begin_layout Standard
